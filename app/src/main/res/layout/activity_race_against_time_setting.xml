<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.Trivia_GiacomoMarcon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:scrollIndicators="top"
    tools:context=".RaceAgainstTimeSetting">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tv_RATS_title"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tv_RATS_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Settings"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_RATS_timePerQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:text="Time per question (sec)"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_RATS_questionsCounter" />

    <TextView
        android:id="@+id/tv_RATS_questionsCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="170dp"
        android:text="Number of questions"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_RATS_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:text="Category"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_RATS_timePerQuestion" />

    <Button
        android:id="@+id/btn_RATS_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Start"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <NumberPicker
        android:id="@+id/np_RATS_categories"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:soundEffectsEnabled="true"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_RATS_category"
        app:layout_constraintStart_toEndOf="@+id/tv_RATS_category"
        app:layout_constraintTop_toTopOf="@+id/tv_RATS_category" />

    <NumberPicker
        android:id="@+id/np_RATS_timePerQuestion"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:soundEffectsEnabled="true"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_RATS_timePerQuestion"
        app:layout_constraintStart_toEndOf="@+id/tv_RATS_timePerQuestion"
        app:layout_constraintTop_toTopOf="@+id/tv_RATS_timePerQuestion" />

    <NumberPicker
        android:id="@+id/np_RATS_questionsCounter"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:soundEffectsEnabled="true"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_RATS_questionsCounter"
        app:layout_constraintStart_toEndOf="@+id/tv_RATS_questionsCounter"
        app:layout_constraintTop_toTopOf="@+id/tv_RATS_questionsCounter" />

</androidx.constraintlayout.widget.ConstraintLayout>