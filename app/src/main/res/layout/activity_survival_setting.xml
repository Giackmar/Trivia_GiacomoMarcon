<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SurvivalSetting">

    <Button
        android:id="@+id/btn_SS_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Start"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <NumberPicker
        android:id="@+id/np_SS_categories"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:soundEffectsEnabled="true"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_SS_category"
        app:layout_constraintStart_toEndOf="@+id/tv_SS_category"
        app:layout_constraintTop_toTopOf="@+id/tv_SS_category"
        app:layout_constraintVertical_bias="0.483" />

    <NumberPicker
        android:id="@+id/np_SS_type"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:soundEffectsEnabled="true"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_SS_type"
        app:layout_constraintStart_toEndOf="@+id/tv_SS_type"
        app:layout_constraintTop_toTopOf="@+id/tv_SS_type" />

    <NumberPicker
        android:id="@+id/np_SS_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:soundEffectsEnabled="true"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_SS_difficulty"
        app:layout_constraintStart_toEndOf="@+id/tv_SS_difficulty"
        app:layout_constraintTop_toTopOf="@+id/tv_SS_difficulty" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tv_SS_title"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tv_SS_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Settings"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_SS_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="170dp"
        android:text="Category"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_SS_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:text="Difficulty"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_SS_category" />

    <TextView
        android:id="@+id/tv_SS_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="100dp"
        android:text="Type"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_SS_difficulty" />
</androidx.constraintlayout.widget.ConstraintLayout>